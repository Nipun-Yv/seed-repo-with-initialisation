        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "target": "ESNext",
        "baseUrl": ".",
        "paths": {
        "@/*": ["./*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "components"]
}
